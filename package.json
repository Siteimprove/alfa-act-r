{
  "$schema": "https://json.schemastore.org/package",
  "private": true,
  "scripts": {
    "build": "tsc --build",
    "clean": "tsc --build --clean",
    "test": "ava \"**/automated*\" \"**/assisted*\"",
    "strict": "ava \"**/automated*\" \"**/assisted*\" -- --strict",
    "testAssisted": "ava \"**/assisted*\"",
    "strictAssisted": "ava \"**/assisted*\" -- --strict",
    "testAutomated": "ava \"**/automated*\"",
    "strictAutomated": "ava \"**/automated*\" -- --strict",
    "fixtures": "node scripts/scrape.js",
    "summary": "node scripts/summary.js"
  },
  "type": "module",
  "dependencies": {
    "@siteimprove/alfa-act": "^0.96.0",
    "@siteimprove/alfa-array": "^0.96.0",
    "@siteimprove/alfa-css": "^0.96.0",
    "@siteimprove/alfa-device": "^0.96.0",
    "@siteimprove/alfa-dom": "^0.96.0",
    "@siteimprove/alfa-future": "^0.96.0",
    "@siteimprove/alfa-hash": "^0.96.0",
    "@siteimprove/alfa-http": "^0.96.0",
    "@siteimprove/alfa-iterable": "^0.96.0",
    "@siteimprove/alfa-json-ld": "^0.96.0",
    "@siteimprove/alfa-map": "^0.96.0",
    "@siteimprove/alfa-option": "^0.96.0",
    "@siteimprove/alfa-rules": "^0.96.0",
    "@siteimprove/alfa-scraper": "^0.76.1",
    "@siteimprove/alfa-set": "^0.96.0",
    "@siteimprove/alfa-web": "^0.96.0",
    "jsonld": "^8.1.0"
  },
  "devDependencies": {
    "@types/jsdom": "^21.0.0",
    "@types/jsonld": "^1.5.8",
    "@types/node": "^22.0.0",
    "act-tools": "github:act-rules/act-tools",
    "ava": "^6.0.0",
    "axios": "^1.6.0",
    "jsdom": "^25.0.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "typescript": "^5.0.0"
  },
  "ava": {
    "verbose": true,
    "environmentVariables": {
      "NODE_OPTIONS": ""
    },
    "files": [
      "test/**/*.spec.js"
    ],
    "timeout": "30s"
  },
  "packageManager": "yarn@4.5.3"
}
