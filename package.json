{
  "name": "alfa-act-r",
  "private": true,
  "workspaces": [
    "vendor/alfa/packages/*"
  ],
  "scripts": {
    "build": "tsc --build",
    "clean": "tsc --build --clean",
    "test": "ava",
    "strict": "ava -- --strict",
    "fixtures": "node scripts/fixtures.js"
  },
  "devDependencies": {
    "@types/node": "^13.13.0",
    "ava": "^3.0.0-beta.2",
    "axios": "^0.19.1",
    "del": "^5.1.0",
    "husky": "^4.0.7",
    "lint-staged": "^10.1.6",
    "make-dir": "^3.0.0",
    "prettier": "^2.0.4",
    "source-map-support": "^0.5.16",
    "typescript": "^3.7.4"
  },
  "ava": {
    "verbose": true,
    "files": [
      "test/**/*.spec.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,md,json,yaml}": [
      "prettier --write"
    ]
  }
}
