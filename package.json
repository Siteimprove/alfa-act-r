{
  "name": "alfa-act-r",
  "private": true,
  "workspaces": [
    "vendor/alfa/packages/*"
  ],
  "scripts": {
    "fixtures": "node scripts/fixtures",
    "build": "tsc --build",
    "clean": "tsc --build --clean",
    "test": "ava"
  },
  "devDependencies": {
    "@types/node": "^11.11.1",
    "ava": "^1.2.1",
    "axios": "^0.18.0",
    "del": "^4.1.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "make-dir": "^3.0.0",
    "prettier": "^1.16.4",
    "source-map-support": "^0.5.9",
    "typescript": "^3.4.1"
  },
  "ava": {
    "verbose": true,
    "files": [
      "test/**/*.spec.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,md,json,yaml}": [
      "prettier --write",
      "git add"
    ]
  }
}
